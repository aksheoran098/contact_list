
<html >
<head>
    <title>
        <%= locals.title %>
    </title>

</head>
<body>
    <h1>Contact List</h1>
    <div>
        <ul>
            <% for (let i of contact_list){ %>
                <li>
                    <%= i.name %> : <p><%= i.phone %></p>
                </li>
            <% } %>
        </ul>
        <form action="/create-contact" method="post">
            <input type="text" name="name" id="" placeholder="Enter name" required>
            <input type="text" name="phone" id="" placeholder="Enter phone no" required>
            <button type="submit">Add Contact</button>
        </form>
    </div>
</body>
</html>